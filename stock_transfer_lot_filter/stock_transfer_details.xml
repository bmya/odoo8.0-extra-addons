<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_stock_enter_transfer_details_z1" model="ir.ui.view">
            <field name="name">Enter transfer details z1</field>
            <field name="model">stock.transfer_details</field>
            <field name="inherit_id" ref="stock.view_stock_enter_transfer_details"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_id']" position="replace">
                    <field name="lot_id" groups="stock.group_production_lot" domain="[('product_id','=?', product_id),('lot_balance','>',0)]" context="{'product_id': product_id}"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
